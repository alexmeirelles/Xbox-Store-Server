
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jogos {
  id                 String @id @default(uuid())
  title              String
  coverImageUrl      String
  description        String
  year               Int
  imdbScore          Int
  trailerYoutubeUrl  String
  gameplayYoutubeUrl String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  generos Generos[]
  perfis Perfis[]

  @@map("jogo")
}

model Generos {
  name String @unique @id

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  jogos Jogos[]
  @@map("genero")
}

model Usuarios {
  id       String  @id @default(uuid())
  name     String  @unique
  email    String  @unique
  password String
  cpf      String  @unique
  isAdmin  Boolean

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  Perfil Perfis[]
  @@map("usuario")
}

model Perfis {
  id   String @id @default(uuid())
  title String
  imageUrl String
    user Usuarios @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  Jogos Jogos[]

  @@map("perfil")
}
